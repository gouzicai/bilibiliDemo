page{
  color:#666;
}
.nav_wrap{

}
.nav{
  white-space: nowrap;
  padding:5rpx;
}
.nav_item{
  padding:20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom:5rpx solid pink;
}

.slides{
  margin-top:10rpx;
  padding:10rpx;
}

.slides swiper{
  height:220rpx;
}

.slides navigator{
  width:100%;
  height:100%;
}
.slides img{
  width:100%;
  height:100%;
}

.video_wrap{
  padding:10rpx;
  display: flex;
  flex-wrap:wrap;
  justify-content: space-between;
}

.video_item{
  width: 48%;
  margin-bottom:20rpx;
}

.video_img{
  position:relative;
}

.video_img image{
  width:100%;
}

.video_img .video_info{
  font-size: 23rpx;
  position: absolute;
  width: 100%;
  bottom:10rpx;
  left:0;
  display: flex;
  justify-content: space-around;
  color: #fff;
}

.video_title{
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap:break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient:vertical;
}